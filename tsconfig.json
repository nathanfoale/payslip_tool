{
  "compilerOptions": {
    "baseUrl": ".", // Base directory is the root folder
    "paths": {
      "@/*": [
        "src/*"
      ], // Maps to the "src" folder
      "@/components/*": [
        "components/*"
      ], // Maps to the "components" folder
      "@/lib/*": [
        "lib/*"
      ] // Maps to the "lib" folder
    },
    "strict": true, // Ensures TypeScript strict mode
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
